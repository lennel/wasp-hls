{
  "name": "wasp-hls",
  "version": "0.0.1",
  "description": "WebAssembly HLS Player Proof Of Concept",
  "scripts": {
    "build:all": "npm run clean && npm run build:wasm && npm run build:worker && npm run build:main",
    "build:demo": "esbuild demo/src/index.tsx --bundle --outfile=build/demo.js",
    "build:demo:watch": "esbuild demo/src/index.tsx --bundle --outfile=build/demo.js --watch",
    "build:demo:release": "esbuild demo/src/index.tsx --bundle --outfile=build/demo.js --minify",
    "build:main": "esbuild src/ts-main/index.ts --bundle --outfile=build/main.js",
    "build:worker": "esbuild src/ts-worker/index.ts --bundle --outfile=build/worker.js",
    "build:main:release": "esbuild src/ts-main/index.ts --bundle --outfile=build/main.js --minify",
    "build:worker:release": "esbuild src/ts-worker/index.ts --bundle --outfile=build/worker.js --minify",
    "build:release": "npm run clean && npm run build:wasm:release && npm run build:worker:release && npm run build:main:release",
    "build:wasm": "npm run compile:rs && npm run move:wasm",
    "build:wasm:release": "npm run compile:rs:release && npm run move:wasm",
    "clippy": "cargo clippy",
    "check": "npm run fmt:ts && npm run types && npm run lint",
    "fmt": "npm run fmt:rs && npm run fmt:ts",
    "fmt:rs": "cargo fmt",
    "fmt:ts": "prettier --write .",
    "types": "npm run types:main && npm run types:worker && npm run types:demo",
    "types:main": "tsc --project ./src/ts-main --noEmit",
    "types:worker": "tsc --project ./src/ts-worker --noEmit",
    "types:demo": "tsc --project ./demo --noEmit",
    "clean": "find ./build ! -name 'index.html' ! -name 'build' ! -name 'style.css' ! -name 'demo.js' ! -name 'logo-white.png' -exec rm -rf {} +",
    "compile:rs": "cargo build --target=wasm32-unknown-unknown && wasm-bindgen --keep-debug --target web ./target/wasm32-unknown-unknown/debug/wasp_hls.wasm --out-dir src/wasm",
    "compile:rs:release": "cargo build --release --target=wasm32-unknown-unknown && wasm-bindgen --target web ./target/wasm32-unknown-unknown/release/wasp_hls.wasm --out-dir src/wasm",
    "doc": "rm -rf doc/generated && docgen.ico doc doc/generated",
    "lint": "npm run lint:main && npm run lint:worker && npm run lint:common && npm run lint:demo",
    "lint:common": "cd src/ts-common && eslint .",
    "lint:main": "cd src/ts-main && eslint .",
    "lint:worker": "cd src/ts-worker && eslint .",
    "lint:demo": "cd demo && eslint src/**/*",
    "move:wasm": "cp src/wasm/wasp_hls_bg.wasm build/wasp_hls_bg.wasm",
    "serve": "http-server ./build"
  },
  "author": "peaberberian",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "docgen.ico": "^0.0.2",
    "esbuild": "^0.14.42",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "http-server": "^14.1.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "mux.js": "^6.1.0"
  }
}
